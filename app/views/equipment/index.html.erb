<%- model_class = Equipment -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:equipment_name) %></th>
      <th><%= model_class.human_attribute_name(:equipment_type) %></th>
      <th><%= model_class.human_attribute_name(:image) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @equipment.each do |equipment| %>
      <tr>
        <td><%= link_to equipment.id, equipment_path(equipment) %></td>
        <td><%= equipment.description %></td>
        <td><%= equipment.equipment_name %></td>
        <td><%= equipment.equipment_type %></td>
        <td><%= equipment.image %></td>
        <td><%=l equipment.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_equipment_path(equipment), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      equipment_path(equipment),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate %>
<h2>Import Equipment</h2>

<p><%= link_to "Import Equipment", new_equipment_import_path %></p>

<%= link_to t('.delete_all', :default => t("helpers.links.destroy all")),
              delete_all_equipment_index_path,
              :method => :delete_all,
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-mini btn-danger' %>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_equipment_path,
            :class => 'btn btn-primary' %>
