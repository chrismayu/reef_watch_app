<%- model_class = AlarmCode -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:tank_name) %></th>
      <th><%= model_class.human_attribute_name(:alarm_code) %></th>
      <th><%= model_class.human_attribute_name(:message) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @alarm_codes.each do |alarm_code| %>
      <tr>
        <td><%= link_to alarm_code.id, alarm_code_path(alarm_code) %></td>
        <td><%= alarm_code.tank_name %></td>
        <td><%= alarm_code.alarm_code %></td>
        <td><%= alarm_code.message %></td>
        <td><%=l alarm_code.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_alarm_code_path(alarm_code), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      alarm_code_path(alarm_code),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_alarm_code_path,
            :class => 'btn btn-primary' %>
