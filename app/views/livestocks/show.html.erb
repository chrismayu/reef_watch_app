<%- model_class = Livestock -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @livestock.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:common_name) %>:</strong></dt>
  <dd><%= @livestock.common_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:scientific_name) %>:</strong></dt>
  <dd><%= @livestock.scientific_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:image) %>:</strong></dt>
  <dd><%= @livestock.image %></dd>
  <dt><strong><%= model_class.human_attribute_name(:livestock_type) %>:</strong></dt>
  <dd><%= @livestock.livestock_type %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              livestocks_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_livestock_path(@livestock), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              livestock_path(@livestock),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
