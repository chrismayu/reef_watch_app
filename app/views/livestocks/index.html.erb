<%- model_class = Livestock -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:common_name) %></th>
      <th><%= model_class.human_attribute_name(:scientific_name) %></th>
      <th><%= model_class.human_attribute_name(:image) %></th>
      <th><%= model_class.human_attribute_name(:livestock_type) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @livestocks.each do |livestock| %>
      <tr>
        <td><%= link_to livestock.id, livestock_path(livestock) %></td>
        <td><%= livestock.description %></td>
        <td><%= livestock.common_name %></td>
        <td><%= livestock.scientific_name %></td>
        <td><%= livestock.image %></td>
        <td><%= livestock.livestock_type %></td>
        <td><%=l livestock.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_livestock_path(livestock), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      livestock_path(livestock),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_livestock_path,
            :class => 'btn btn-primary' %>
