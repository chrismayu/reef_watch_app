<%- model_class = ReefTank -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:tank_name) %>:</strong></dt>
  <dd><%= @reef_tank.tank_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:setup_date) %>:</strong></dt>
  <dd><%= @reef_tank.setup_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_update) %>:</strong></dt>
  <dd><%= @reef_tank.last_update %></dd>
  <dt><strong><%= model_class.human_attribute_name(:current_temp) %>:</strong></dt>
  <dd><%= @reef_tank.current_temp %></dd>
  <dt><strong><%= model_class.human_attribute_name(:temp_name) %>:</strong></dt>
  <dd><%= @reef_tank.temp_name %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              reef_tanks_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_reef_tank_path(@reef_tank), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              reef_tank_path(@reef_tank),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
