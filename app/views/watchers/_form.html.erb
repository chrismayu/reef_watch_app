<%= simple_form_for @watcher, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :params %>
  <%= f.input :temp_name %>
  <%= f.input :temp %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                watchers_path, :class => 'btn' %>
  </div>
<% end %>
