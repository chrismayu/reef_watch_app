<%- model_class = Watcher -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:params) %></th>
      <th><%= model_class.human_attribute_name(:temp_name) %></th>
      <th><%= model_class.human_attribute_name(:temp) %></th>

      <th><%= model_class.human_attribute_name(:ambient_temp) %></th>
      <th><%= model_class.human_attribute_name(:powerhead) %></th>
      <th><%= model_class.human_attribute_name(:main_pump) %></th>
      <th><%= model_class.human_attribute_name(:heater) %></th>
       <th><%= model_class.human_attribute_name(:day_light) %></th>

      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @watchers.each do |watcher| %>
      <tr>
        <td><%= link_to watcher.id, watcher_path(watcher) %></td>
        <td><%= watcher.params %></td>
        <td><%= watcher.temp_name %></td>
        <td><%= watcher.temp %></td>
		<td><%= watcher.ambient_temp %></td>
        <td><%= watcher.powerhead %></td>
		<td><%= watcher.main_pump %></td>
        <td><%= watcher.heater %></td>
		<td><%= watcher.day_light %></td>
        <td><%=l watcher.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_watcher_path(watcher), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      watcher_path(watcher),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_watcher_path,
            :class => 'btn btn-primary' %>
